@using UnityWeb.HtmlHelpers
@using UnityWeb.Resources.Layout
@*<!DOCTYPE html>*@
<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "-//W3C//DTD HTML 4.01 Transitional//EN"> 
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>Northern Trust</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width">
    <link rel="stylesheet" href="@Url.Content("~/Content/normalize.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/main.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/dashboard.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/themes/base/jquery.ui.autocomplete.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/themes/base/jquery.ui.all.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Content/popover.css")" />   
    <link rel="stylesheet" href="@Url.Content("~/Content/bootstrapUnity.css")" /> 
    <link href='//fonts.googleapis.com/css?family=Roboto:400,100,300,500,700,900' rel='stylesheet' type='text/css' />
    <script src="@Url.Content("~/Scripts/modernizr-2.6.2.min.js")" type="text/javascript"></script>
</head>
<body>
    <!--[if lt IE 7]>
    <p class="chromeframe">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">activate Google Chrome Frame</a> to improve your experience.</p>
<![endif]-->
  <header>
    <!-- LOGO -->
    <h1 class="floatleft">
      @Html.ActionImage(@Url.Action("Index", "Dashboard", new { }), @Url.Content("~/Images/assets/logo.png"), "Unity")
    </h1>
    <!-- NAV -->
    <nav class="floatright">
      <ul>
        <li>@Html.ActionLink("HOME", "Index", "Dashboard")</li>
          <li><a href="https://daweb.dstoutput.co.uk/">eLIBRARY</a></li>
          @Html.BeginDiv("Admin,dstadmin")
        <li>
          <a href="#">REPORTS</a>
          <ul>
            @Html.BeginDiv("Admin,dstadmin")
            <li>@Html.ActionLink("User", "Index", "UserReports")</li>
            <li>@Html.ActionLink("Kpi", "Index", "KpiReports")</li>
            <li>@Html.ActionLink("Log In", "Index", "LogInReport")</li>
            @Html.EndDiv()
          </ul>
        </li>
          @Html.EndDiv()
          @Html.BeginDiv("Admin,dstadmin,Governor")
          <li>@Html.ActionLink("OTF's", "Index", "Otf")</li>
          @Html.EndDiv()
          @Html.BeginDiv("Admin,dstadmin")
          <li>
            <a href="#">ADMINISTRATION</a>
              <ul>
                  @Html.BeginDiv("dstadmin")
                  <li>@Html.ActionLink("Manage Applications", "Index", "Application")</li>
                  <li>@Html.ActionLink("Manage Document Types", "Index", "DocType")</li>
                  <li>@Html.ActionLink("Manage Sub Document Types", "Index", "SubDocType")</li>
                  <li>@Html.ActionLink("Manage Management Companies", "Index", "ManCo")</li>
                   @Html.EndDiv()
                  <li>@Html.ActionLink("Manage Auto Approvals", "Index", "AutoApproval")</li>
                  <li>@Html.ActionLink("Manage Users", "Index", "User")</li>
                  @Html.BeginDiv("dstadmin")
                  <li>@Html.ActionLink("Manage News Ticker", "Edit", "NewsTicker")</li>
                  @Html.EndDiv()            
              </ul>
          </li>
          @Html.EndDiv()
          <li><a href="#">MY UNITY</a>
              <ul>
                  <li>@Html.ActionLink("Security Settings","Index","Security")</li>
              </ul>
          </li>
        <li><a href="http://chat.nexdox.com/">CHAT</a></li>
          @Html.BeginDiv("Admin,dstadmin,Governor")
          <li id="cart">@Html.Action("Summary", "CartItem")</li>
          @Html.EndDiv()
      </ul>
    </nav>
    <!-- LOGGED IN INFORMATION -->
    <div class="floatright">
      <div class="strap">
        @Html.Action("Summary", "Account")
      </div>
    </div>
  <div class="clearfix"></div>
  </header>
    <!-- USER & ERROR -->
    <div class="col960">
        <div class="usererror">
          @Html.Action("GetNewsTicker", "NewsTicker")
          @Html.Action("Index", "Environment")
          <div class="clearfix"></div>
        </div>
    </div>
    <!-- MAIN BODY -->
  <div class="col960">
    <div class="main">
      <!-- Content -->
      <div class="content">
        <!-- Grid Search -->
        <div class="gridsearch">
          @Html.Action("Index", "QuickSearch")
          <section class="col2 floatright noclear">
            <button class="filterbtn floatright noclear">Search</button>
          </section>
        </div>
        <div class="clearfix"></div>
        @Html.Action("Index", "Search")
        <div class="clearfix"></div>
        @TempData["message"]
        @RenderBody()
        <div class="modalLoading"></div>
      </div>
    </div>
  </div>
  @Html.Partial("_Session")
  <footer>
    <p class="floatleft ReleaseNumber">
      @Index.Version
      <br />
      @Index.Copyright
    </p>
    <p class="txtright">
      <img src="@Url.Content("~/images/assets/dst.png")" alt="DST Output" />&nbsp;&nbsp;&nbsp;&nbsp;<img src="@Url.Content("~/images/assets/nt.png")" alt="Northern Trust" />
    </p>
  </footer>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js" type="text/javascript"></script>
    <script>window.jQuery || document.write('<script src="scripts/jquery-2.0.2.min.js" type="text/javascript"><\/script>')</script>
    <script src="@Url.Content("~/Scripts/jquery.marquee.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.placeholder.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/main.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/scripts/Utility/Utility.js")" type="text/javascript"></script>
  <script src="@Url.Content("~/Scripts/jquery.corner.js")" type="text/javascript"></script>
  <script src="@Url.Content("~/scripts/bootstrap.js")" type="text/javascript"></script>
  <script src="@Url.Content("~/Scripts/jquery-ui-1.10.3.min.js")" type="text/javascript"></script>
  <script src="@Url.Content("~/Scripts/session/session.js")" type="text/javascript"></script>
  <script src="@Url.Content("~/scripts/Popover/popover.js")" type="text/javascript"></script>
    @RenderSection("scripts", required: false)
    @Html.Hidden(HttpContext.Current.Request.ApplicationPath, null, new { ID = "SiteName", Value = HttpContext.Current.Request.ApplicationPath })
  <div id="approveDocumentUrl" data-request-url="@Url.Action("Document", "Approval")"></div>
  <div id="approveGridUrl" data-request-url="@Url.Action("Grid", "Approval")"></div>
  <div id="rejectGridUrl" data-request-url="@Url.Action("Grid", "Reject")"></div>
  <div id="approveBasketUrl" data-request-url="@Url.Action("Basket", "Approval")"></div>
  <div id="rejectDocumentUrl" data-request-url="@Url.Action("Document", "Reject")"></div>
  <div id="rejectBasketUrl" data-request-url="@Url.Action("Basket", "Reject")"></div>
  <div id="deleteOtfUrl" data-request-url="@Url.Action("Delete", "Otf")"></div>
  <div id="editOtfUrl" data-request-url="@Url.Action("Edit", "Otf")"></div>
  <div id="otfHome" data-request-url="@Url.Action("Index", "Otf")"></div>

</body>
</html>
